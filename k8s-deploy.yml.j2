apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  name: k8s-deployment
spec:
  selector:
    matchLabels:
      app: k8s-project
  replicas: 2 # tells deployment to run 2 pods matching the template
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1

  template:
    metadata:
      labels:
        app: k8s-project
    spec:
      containers:
      - name: k8ss-project
        image: yadavashu/test:{{build_id}}
        imagePullPolicy: Always
        envFrom:

        ports:
        - containerPort: 8080